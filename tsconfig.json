{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "strictNullChecks": false,
    "lib": [
      "DOM",
      "es2018"
    ],
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "views/*": [".views/views/*"],
      "raport/*": ["src/lib/*"],
      "design/*": ["src/design/*"]
    }
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    ".views/**/*.ts"
  ]
}
