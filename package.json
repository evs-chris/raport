{
  "name": "raport",
  "version": "0.2.2",
  "description": "Simple reports. No ragrets.",
  "main": "./lib/raport.umd.js",
  "types": "./lib/index.d.ts",
  "module": "./lib/index.js",
  "license": "MIT",
  "keywords": [
    "report",
    "pdf",
    "html",
    "delimited"
  ],
  "devDependencies": {
    "sprunge": "^0.0.2",
    "ractive": "^1.3",
    "rollup": "^1.21",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "@rollup/plugin-node-resolve": "^8.4",
    "typescript": "^3.6",
    "eslint": "^6",
    "qunit": "^2.9",
    "@types/qunit": "^2.9",
    "source-map-support": "^0.5"
  },
  "scripts": {
    "build:lib": "tsc -p config/lib.tsconfig.json; rollup -c config/lib.rollup.config.js; rm -r lib; cp -r build/lib lib",
    "build:design:view": "ractive component -id design/view -oe .ts -o design/src/view -ae",
    "build": "npm run build:lib",
    "dev": "bash -c \"tsc\ntsc -w &\nrollup -w -c config/dev.rollup.config.js\"",
    "clean": "rm -r build; rm -r lib",
    "test": "tsc -p config/test.tsconfig.json; rollup -c config/test.rollup.config.js; qunit --require 'source-map-support/register' build/test.js"
  },
  "files": [
    "lib",
    "README.md",
    "CHANGELOG.md"
  ]
}
