{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "strictNullChecks": false,
    "outDir": "build",
    "lib": [
      "dom",
      "es2017"
    ],
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "views/*": ["./.views/views/*"],
      "raport/*": ["./src/lib/*"]
    }
  },
  "compileOnSave": false,
  "include": [
    "src/lib",
    "src/design"
  ],
  "exclude": [
    "src/play"
  ]
}
