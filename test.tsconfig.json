{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "strictNullChecks": false,
    "lib": [
      "dom",
      "es2017"
    ],
    "preserveWatchOutput": true,
    "skipLibCheck": true
  },
  "compileOnSave": false,
  "include": [
    "test", "src/lib"
  ]
}

